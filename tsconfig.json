{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    //"esModuleInterop": true,
    "isolatedModules": true,
    "strictNullChecks": false,
    "importsNotUsedAsValues": "error",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]

}
